n = input()
c = 1
p = 2
while c {
    cc = 1
    while cc {
        q = 2
        while q * q <= p && cc {
            cc = p % q != 0
            q = q + 1
        }
        if cc {
            cc = 0
        }
        else {
            p = p + 1
            cc = 1
        }
    }

    d = p
    i = 0
    q = n / d
    m = n % d
    while q > 0 && m == 0 {
        i = i + 1
        d = d * p
        m = n % d
        if m == 0 {
            q = n / d
        }
        else {}
    }

    print(p)
    print(i)
    n = n / (d / p)
    p = p + 1
    c = n != 1
}